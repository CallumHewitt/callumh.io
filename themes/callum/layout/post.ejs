<h1><%- page.title %></h1>
<% if (page.show_date) { %>
<p><%- page.date.format(config.date_format) %></p>
<% } %>
<div class="content-body">
  <% if (!!page.header_image) { %>
  <div class="header-image">
    <img alt="<%- page.header_image_alt_text %>" src="<%- page.header_image.startsWith('http') ? page.header_image : page.path + page.header_image %>" />
  </div>
  <% } %>
  <%- page.content%>
</div>